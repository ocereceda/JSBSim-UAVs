<?xml version="1.0" encoding="utf-8"?>
<?xml-stylesheet type="text/xsl" href="http://jsbsim.sf.net/JSBSimScript.xsl"?>
<runscript xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="http://jsbsim.sf.net/JSBSimScript.xsd"
    name="Test">

  <description>
open-loop tests
  </description>

  <use aircraft="GBS_3" initialize="reset03"/>
  <run start="0" end="30" dt="0.01">

    <event name="Set engine throttle">
      <condition>simulation/sim-time-sec  ge  0.0</condition>
      <set name="fcs/throttle-cmd-norm" action="FG_STEP" value="0.0" tc="0.5"/>
      <notify/>
    </event>

    <event name="Set elevator max value">
      <condition> simulation/sim-time-sec ge 12.0 </condition>
        <set name="fcs/elevator-cmd-norm" action="FG_STEP" value="0.0" tc="1"/>
      <notify/>
     </event>
        
    <event name="Set elevator back to zero">
      <condition> simulation/sim-time-sec ge 20.0 </condition>
        <set name="fcs/elevator-cmd-norm" action="FG_STEP" value="0.0" tc="1"/>
      <notify/>
     </event>   


  </run>

</runscript>
